      "ssh_username": "vagrant",
      "ssh_timeout": "10000s",
      "type": "parallels-iso",
      "vm_name": "{{ user `template` }}"
    },
    {
      "boot_command": [
        "<esc><enter><wait>",
        "linux netsetup=dhcp netdevice=eth0 install=cd:/<wait>",
