      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{ user `template` }}",
      "memory": "{{ user `memory` }}",
      "cpus": "{{ user `cpus` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1"
      },
      "vmx_remove_ethernet_interfaces": true
    },
    {
      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
